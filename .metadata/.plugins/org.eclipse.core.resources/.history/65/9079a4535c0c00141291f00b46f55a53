	function AddNewTask($child, $taskInfo, $frequency){
		include_once '../config/Config.php';
		$conn = new DatabaseConnect();
		$mysqli=$conn->connect($db_host, $db_username, $db_password, $mysql_db);
		
		date_default_timezone_set("Europe/London");
		$time = time();
		$expiry = $time+86400*$frequency;

		$updateQuery = "INSERT INTO Child_Tasks (User, Description, repeat_frequency, time_of_day, expiry)
						VALUES (?, ?,?,?,?)
						";
		
		if($upd = $mysqli->prepare($updateQuery)){
			$upd->bind_param('sssss', $child, $taskInfo, $frequency, $time, $expiry);
			$upd->execute();
			$upd->bind_result($login);
			$upd->fetch();
			echo 'Updated fields';
		}else{
			echo 'Could not update fields';
		}
		
	$mysqli->close();
	}

	function EditTask($taskID, $newTaskInfo){
		include_once '../config/Config.php';
		$conn = new DatabaseConnect();
		$mysqli=$conn->connect($db_host, $db_username, $db_password, $mysql_db);
	
		$updateQuery = "UPDATE Child_Tasks 
						SET Description = ?
						WHERE id = ?
						";
		
		if($upd = $mysqli->prepare($updateQuery)){
			$upd->bind_param('ss', $newTaskInfo, $taskID);
			$upd->execute();
			$upd->bind_result($login);
			$upd->fetch();
			echo 'Updated fields';
		}else{
			echo 'Could not update fields';
		}
		$mysqli->close();	
	}
	
	function CompleteTask($taskID){
		include_once '../config/Config.php';
		$conn = new DatabaseConnect();
		$mysqli=$conn->connect($db_host, $db_username, $db_password, $mysql_db);
	
		$updateQuery = "UPDATE Child_Tasks
						SET Active = 1
						WHERE id = ?";
	
		if($upd = $mysqli->prepare($updateQuery)){
			$upd->bind_param('s', $taskID);
			$upd->execute();
			$upd->bind_result($login);
			$upd->fetch();
			echo 'Updated fields';
		}else{
			echo 'Could not update fields';
		}
		$mysqli->close();
	}
	
	
	function DeleteTask($taskID){
		include_once '../config/Config.php';
		$conn = new DatabaseConnect();
		$mysqli=$conn->connect($db_host, $db_username, $db_password, $mysql_db);
	
		$updateQuery = "DELETE FROM Child_Tasks WHERE id = ?";
	
		if($upd = $mysqli->prepare($updateQuery)){
			$upd->bind_param('s',$taskID);
			$upd->execute();
			$upd->bind_result($login);
			$upd->fetch();
			echo 'Updated fields';
		}else{
			echo 'Could not update fields';
		}
	$mysqli->close();
	}
	
	

	function EditChildTimeLimits($childID, $timeLimits){
